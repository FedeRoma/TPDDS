@model TP_DDS.Models.Grupo

@{
    ViewBag.Title = "Crear";
}

<h2>Grupos</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>Crear nuevo Grupo</h3>
    <hr />
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, "Nombre", new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <h4>Preferencias</h4>
                <table class="table">
                    <tr style="background-color:aliceblue">
                        <th>Sel.</th>
                        <th>Preferencia</th>
                    </tr>

                    @foreach (var item in (IEnumerable<TP_DDS.Models.Preferencia>)ViewBag.Preferencias)
                    {
                        <tr>
                            <td>
                                <input class="check-box" type="checkbox">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-md-10">
                <a class="btn btn-primary" href="javascript:window.history.back();">&laquo; Volver atrás</a>
                <button type="submit" value="Crear Grupo" class="btn btn-primary" disabled="disabled">Crear Grupo</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
